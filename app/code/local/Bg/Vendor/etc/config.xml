<config>
    <modules>
        <Bg_Vendor>
            <version>0.1.0</version>                
        </Bg_Vendor>
    </modules>
    <global>
        <resources>
            <vendor_setup>
                <setup>
                    <module>Bg_Vendor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
        <models>
            <vendor>
                <class>Bg_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Bg_Vendor_Model_Resource</class>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                    <vendor_address>
                        <table>vendor_address</table>
                    </vendor_address>  
                </entities>
            </vendor_resource>
        </models>
        <blocks>
            <vendor>
                <class>Bg_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
            <vendor>
                <class>Bg_Vendor_Helper</class>
            </vendor>
        </helpers>
    </global>
    <admin>
        <routers>
            <vendor>
                <use>admin</use>
                <args>
                    <module>Bg_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
  </admin>
  
</config>
