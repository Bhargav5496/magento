        <blocks>
            <eavmgmt>
                <class>Bhargav_Eavmgmt_Block</class>
            </eavmgmt>
        </blocks>
        <helpers>
            <eavmgmt>
                <class>Bhargav_Eavmgmt_Helper</class>
            </eavmgmt>
        </helpers>
        
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ccc_eavmgmt before="Mage_Adminhtml">Bhargav_Eavmgmt_Adminhtml</ccc_eavmgmt>
                    </modules>
                </args>
            </adminhtml>
        </routers>
  </admin>
  
</config>
