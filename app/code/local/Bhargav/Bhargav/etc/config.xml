        <blocks>
            <bhargav>
                <class>Bhargav_Bhargav_Block</class>
            </bhargav>
        </blocks>
        <helpers>
            <bhargav>
                <class>Bhargav_Bhargav_Helper</class>
            </bhargav>
        </helpers>
        
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <bhargav_bhargav before="Mage_Adminhtml">Bhargav_Bhargav_Adminhtml</bhargav_bhargav>
                    </modules>
                </args>
            </adminhtml>
        </routers>
  </admin>
  
</config>
